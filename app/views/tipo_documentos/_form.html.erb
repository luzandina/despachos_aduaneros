<% form_for(@tipo_documento) do |f| %>
  <%= f.error_messages %>

<table width="40%" align="center"  >
  <tr>
    <td> 
      <p>
        <%= f.label :t_doc_id, 'ID' %><br />
        <%= f.text_field :t_doc_id %>
      </p>
      <p>
        <%= f.label :tipo_doc, 'Tipo Documento' %><br />
        <%= f.text_field :tipo_doc %>
      </p>
      
      <p>
        <%= f.label :descripcion %><br />
        <%= f.text_field :descripcion %>
      </p>
    </td>
  </tr>
</table>
<table width="40%" align="center"  >
  <tr>
    <td>
      <p>
       <%= f.submit 'Salvar' %>
     </p>
    </td>
  </tr>
</table>  
<% end %>


