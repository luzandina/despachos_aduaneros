<h1>Nuevo pago</h1>

<% form_for(@pago) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :liquidacion_id %>
  <p>
    <%= f.label :fecha %><br />
    <%= f.date_select :fecha %>
  </p>
  <p>
    <%= f.label :cantidad %><br />
    <%= f.text_field :cantidad %>
  </p>
  <p>
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion, :rows => 5 %>
  </p>
  <p>
    <%= f.submit 'Pagar' %>
  </p>
<% end %>
