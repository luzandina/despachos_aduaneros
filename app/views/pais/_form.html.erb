<% form_for(@pai) do |f| %>
  <%= f.error_messages %>

<table width="40%" align="center"  >
  <tr>
    <td>
      <p>
       <%= f.label :pais %><br />
       <%= f.text_field :pais %>
     </p>
     
     <p>
       <%= f.label :descripcion %><br />
       <%= f.text_field :descripcion %>
     </p>
     
    </td>
  </tr>
</table>
<table width="40%" align="center"  >
  <tr>
    <td>
      <p>
       <%= f.submit 'Salvar' %>
     </p>
    </td>
  </tr>
</table>  
<% end %>


